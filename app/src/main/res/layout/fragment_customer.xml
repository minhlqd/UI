<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CustomerFragment">

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_componente_6_2"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icons_8_expand_arrow"
        android:layout_marginTop="48dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/menu"
        style="@style/TextEmail"
        android:textColor="#121212"
        android:text="@string/menu"
        android:layout_marginTop="45dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/menu">
        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@+id/menu"
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/news_background">
            <androidx.cardview.widget.CardView
                android:id="@+id/imgProfile"
                android:layout_marginTop="16dp"
                android:layout_marginStart="40dp"
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:cardCornerRadius="23dp">
                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bitmap_copy_5"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_toEndOf="@id/imgProfile"
                android:layout_marginStart="17dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:textSize="16sp"
                android:textColor="#151515"
                android:text="@string/mary_olson"
                tools:ignore="RelativeOverlap" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icons_8_settings"
                android:layout_toStartOf="@id/translation"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/translation"
                android:scaleType="fitCenter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/icons_8_translation"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.5dp"
                android:layout_marginEnd="12.5dp"
                android:layout_marginTop="71.5dp"
                android:background="@drawable/line_customer"/>
            <LinearLayout
                android:id="@+id/linearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/line1"
                android:layout_marginStart="45dp"
                android:layout_marginTop="17.5dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/alarm"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="18dp">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/icon_backgound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icons_8_alarm"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="18dp">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/icon_backgound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icons_8_left_and_right_arrows"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="18dp">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/icon_backgound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icons_8_pin"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="18dp">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/icon_backgound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icons_8_no_entry"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24.5dp"
                android:layout_below="@id/line1"
                android:layout_toEndOf="@+id/linearIcon">
                <TextView
                    style="@style/TxtCustomer"
                    android:text="@string/alerts" />

                <TextView
                    android:layout_marginTop="32dp"
                    style="@style/TxtCustomer"
                    android:text="@string/predictions" />
                <TextView
                    android:layout_marginTop="32dp"
                    style="@style/TxtCustomer"
                    android:text="@string/predictions" />
                <TextView
                    android:layout_marginTop="32dp"
                    style="@style/TxtCustomer"
                    android:text="@string/remove_ads" />
            </LinearLayout>

            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_customer"
                android:layout_below="@id/linearIcon"
                android:layout_marginTop="23.5dp"/>
            <TextView
                android:id="@+id/tools"
                android:paddingTop="3dp"
                android:paddingBottom="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="14dp"
                style="@style/TxtCustomer"
                android:textColor="#151515"
                android:textSize="16sp"
                android:background="@drawable/txt_customer_background"
                android:text="@string/tools"
                android:layout_below="@id/line2"
                android:layout_marginTop="25.5dp"
                android:layout_marginStart="45dp"/>
            <LinearLayout
                android:id="@+id/linearIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/tools"
                android:layout_marginTop="32dp"
                android:layout_marginStart="49dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons_8_profit"/>
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons_8_swap"/>
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons_8_video_call"/>
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons_8_rent"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="28dp"
                android:layout_marginStart="14dp"
                android:layout_below="@id/tools"
                android:layout_toEndOf="@id/linearIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TxtCustomer"
                    android:textSize="15sp"
                    android:text="@string/select_stocks"/>
                <TextView
                    android:layout_marginTop="19dp"
                    style="@style/TxtCustomer"
                    android:textSize="15sp"
                    android:text="@string/currency_exchange"/>
                <TextView
                    android:layout_marginTop="19dp"
                    style="@style/TxtCustomer"
                    android:textSize="15sp"
                    android:text="@string/webinar"/>
                <TextView
                    android:layout_marginTop="19dp"
                    style="@style/TxtCustomer"
                    android:textSize="15sp"
                    android:text="@string/best_broker"/>
            </LinearLayout>

            <TextView
                android:id="@id/line3"
                android:layout_marginTop="21.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_customer"
                android:layout_below="@id/linearIcon2"/>
            <TextView
                android:id="@+id/markets"
                android:paddingTop="3dp"
                android:paddingBottom="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="12dp"
                style="@style/TxtCustomer"
                android:textColor="#151515"
                android:textSize="16sp"
                android:background="@drawable/txt_customer_background"
                android:text="@string/markets"
                android:layout_below="@id/line3"
                android:layout_marginTop="28.5dp"
                android:layout_marginStart="45dp"/>
            <ImageView
                android:id="@+id/profit"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:src="@drawable/icons_8_profit"
                android:layout_below="@id/markets"
                android:layout_marginTop="32dp"
                android:layout_marginStart="49dp"/>
            <TextView
                style="@style/TxtCustomer"
                android:layout_marginTop="28dp"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="200dp"
                android:layout_below="@id/markets"
                android:layout_toEndOf="@id/profit"
                android:textSize="15sp"
                android:text="@string/select_stocks"/>
        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>