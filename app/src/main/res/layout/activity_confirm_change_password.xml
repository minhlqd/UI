<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.ConfirmChangePasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_componente_6_7"
            tools:ignore="ContentDescription,MissingConstraints" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="6.4dp"
            app:layout_constraintBottom_toTopOf="@+id/deals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                style="@style/TextEmail"
                android:text="@string/yay_your_password_has_been"/>
            <TextView
                style="@style/TextEmail"
                android:text="@string/changed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="1.5dp"
            app:layout_constraintTop_toTopOf="@+id/deals"
            app:layout_constraintStart_toStartOf="@id/deals"
            app:layout_constraintEnd_toEndOf="@id/deals">
            <TextView
                style="@style/Skip"
                android:fontFamily="@font/lato_light"
                android:text="@string/you_can_now_log_into_your_account"/>
            <TextView
                style="@style/Skip"
                android:fontFamily="@font/lato_light"
                android:text="@string/with_the_new_password"/>
        </LinearLayout>

        <TextView
            style="@style/TextEmail"
            android:textSize="24sp"
            android:textColor="#2b2828"
            android:text="@string/tradix"
            android:layout_marginStart="129dp"
            android:layout_marginEnd="158dp"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="59dp"
            app:layout_constraintTop_toTopOf="@id/background"
            app:layout_constraintStart_toStartOf="@id/background"
            app:layout_constraintEnd_toEndOf="@id/background"
            app:layout_constraintBottom_toBottomOf="@+id/background"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coin"
            android:layout_marginTop="82.2dp"
            android:layout_marginBottom="61.8dp"
            android:layout_marginStart="227.4dp"
            android:layout_marginEnd="127.7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/deals"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pixeltrue_special_deals"
            android:layout_marginTop="38.4dp"
            android:layout_marginBottom="171.6dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flying_coins"
            android:layout_marginTop="41.9dp"
            android:layout_marginStart="35.8dp"
            app:layout_constraintTop_toTopOf="@id/deals"
            app:layout_constraintStart_toStartOf="@id/deals"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flying_coins"
            android:layout_marginTop="41.9dp"
            android:layout_marginEnd="44.2dp"
            app:layout_constraintTop_toTopOf="@id/deals"
            app:layout_constraintEnd_toEndOf="@id/deals"
            tools:ignore="ContentDescription" />
        
        <Button
            android:id="@id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_change_password_background"
            android:text="@string/login"
            android:textSize="14sp"
            android:fontFamily="@font/lato_black"
            android:textColor="#ffffff"
            android:layout_marginTop="49.6dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="62dp"
            app:layout_constraintTop_toBottomOf="@+id/deals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>